<!DOCTYPE html>
<html lang="en">

<head>
  <!--Include head-->
  <%- include('../partials/head') %>
    <title>Argon | Home</title>
</head>

<body>
  <header>
    <!--Include header-->
    <%- include('../partials/header') %>
  </header>

  <div class="allProductPage">
 
      
    <div class="card-container">
      <% Productos.forEach(producto => { %>
        <a href="./detail/<%= producto.id %>">
        <div class="card">
          <div class="card-image"><img src="<%= producto.imagen  %>" alt="" ></div>
          <p class="price">$<%= producto.precio %></p>
          <p class="description"> <%= producto.nombre %></p>
            <p class="marca"> <%= producto.Marca.marca %></p>
             
            
        </div>  
      <% }) %>
    </div>


  <!--Include Footer-->
  <%- include('../partials/footer') %>
</body>

</html>