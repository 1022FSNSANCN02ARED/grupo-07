<!DOCTYPE html>
<html lang="en">
  <head>
    <!--Include head-->
    <%- include('../partials/head') %>
    <script src="/js/EditValidation.js"></script>
    <title>Argon | Carga</title>
  </head>
  <body>
    <header>
      <!--Include header-->
      <%- include('../partials/header') %>
      <script src="/js/"></script>
    </header>
    <section class="contenedorForm">
      <form
        action="/products/<%= Productos.id %>?_method=put"
        method="POST"
        enctype="multipart/form-data"
        class="edit"
      >
        <h4><%= Productos.nombre %></h4>
        <div class="galeria">
          <img src="<%= Productos.imagen %>" />
        </div>
        <label for="imagen">Suba una imagen</label>
        <input
          class="w-100"
          type="file"
          name="imagen"
          id="imagen"
          value="<%= Productos.imagen %>"
        />
        <label for="producto">Nombre del productos</label>
        <input
          type="text"
          name="nombre"
          class="nombre"
          id="nombre"
          value="<%= Productos.nombre %>"
        />
        <div class="text-danger nombre">
          <% if (locals.errors && errors.nombre) { %><%= errors.nombre.msg %> <%
          } %>
          </div>
          <br />

        <label for="marca">Marca</label>
        <select name="marca" id="marca">
          <option value="1" <% if(Productos.marca=="Dell"){ %><%= "selected"  %><% }%>>Dell</option>
          <option value="2" <% if(Productos.marca=="Gigabyte"){ %><%= "selected"  %><% }%>>Gigabyte</option>
          <option value="3" <% if(Productos.marca=="ViewSonic"){ %><%= "selected"  %><% }%>>ViewSonic</option>
          <option value="4" <% if(Productos.marca=="Asus"){ %><%= "selected"  %><% }%>>Asus</option>
          <option value="5" <% if(Productos.marca=="Intel"){ %><%= "selected"  %><% }%>>Intel</option>
          <option value="6" <% if(Productos.marca=="Amd"){ %><%= "selected"  %><% }%>>Amd</option>
          <option value="7" <% if(Productos.marca=="Corsair"){ %><%= "selected"  %><% }%>>Corsair</option>
          <option value="8" <% if(Productos.marca=="Logitech"){ %><%= "selected"  %><% }%>>Logitech</option>
          <option value="9" <% if(Productos.marca=="Adata"){ %><%= "selected"  %><% }%>>Adata</option>
          <option value="10" <% if(Productos.marca=="Zotac"){ %><%= "selected"  %><% }%>>Zotac</option>
          <option value="11" <% if(Productos.marca=="Western Digital"){ %><%= "selected"  %><% }%>>Western Digital</option>
          <option value="12" <% if(Productos.marca=="Samsung"){ %><%= "selected"  %><% }%>>Samsung</option>
          <option value="13" <% if(Productos.marca=="MSI"){ %><%= "selected"  %><% }%>>MSI</option>
          <option value="14" <% if(Productos.marca=="PNY"){ %><%= "selected"  %><% }%>>PNY</option>
          <option value="15" <% if(Productos.marca=="Redragon"){ %><%= "selected"  %><% }%>>Redragon</option>
          <option value="16" <% if(Productos.marca=="Noganet"){ %><%= "selected"  %><% }%>>Noganet</option>
          <option value="17" <% if(Productos.marca=="Deepcool"){ %><%= "selected"  %><% }%>>Deepcool</option>
          <option value="18" <% if(Productos.marca=="Overtech"){ %><%= "selected"  %><% }%>>Overtech</option>
          <option value="19" <% if(Productos.marca=="TForce"){ %><%= "selected"  %><% }%>>TForce</option>
          <option value="20" <% if(Productos.marca=="IdCooling"){ %><%= "selected"  %><% }%>>IdCooling</option>
          <option value="21" <% if(Productos.marca=="GENERICO"){ %><%= "selected"  %><% }%>>GENERICO</option>
        </select>

        
        <label for="sockets">Sockets</label>
        <input
          class="w-100"
          type="text"
          name="sockets"
          id="sockets"
          placeholder="<%=Productos.sockets %>"
          value="<%= Productos.sockets %>"
        />

        <label for="slots">Slots</label>
        <select name="slots" id="slots">
          <option value="0" <% if(Productos.slots==0){ %><%= "selected"  %><% }%>>No aplica</option>
          <option value="2" <% if(Productos.slots==2){ %><%= "selected"  %><% }%>>2</option>
          <option value="4" <% if(Productos.slots==4){ %><%= "selected"  %><% }%>>4</option>
          <option value="6" <% if(Productos.slots==6){ %><%= "selected"  %><% }%>>6</option>
          <option value="8" <% if(Productos.slots==8){ %><%= "selected"  %><% }%>>8</option>
        </select>

        <label for="ram">RAM</label>
        <select name="ram" id="ram">
          <option value="" <% if(Productos.ram==""){ %><%= "selected"  %><% }%>>No aplica</option>
          <option value="DDR3" <% if(Productos.ram=="DDR3"){ %><%= "selected"  %><% }%>>DDR3</option>
          <option value="DDR4" <% if(Productos.ram=="DDR4"){ %><%= "selected"  %><% }%>>DDR4</option>
          <option value="DDR5" <% if(Productos.ram=="DDR5"){ %><%= "selected"  %><% }%>>DDR5</option>
        </select>

        <label for="precio">Precio</label>
        <input
          class="precio"
          type="number"
          name="precio"
          id="precio"
          value="<%= Productos.precio %>"
        />
        <div class="text-danger precio">
          <% if (locals.errors && errors.precio) { %><%= errors.precio.msg %> <%
          } %>
          </div>
        <label for="descripcion">Descripci√≥n</label>
        <input
          class="w-100"
          type="text"
          name="descripcion"
          id="descripcion"
          value="<%= Productos.descripcion %>"
        />

        
        <label for="gama">Gama</label>
        <select name="gama" id="gama">
          <option value="1" <% if(Productos.gamaId==1){ %><%= "selected"  %><% }%>>Alta</option>
          <option value="2" <% if(Productos.gamaId==2){ %><%= "selected"  %><% }%>>Media</option>
          <option value="3" <% if(Productos.gamaId==3){ %><%= "selected"  %><% }%>>Baja</option>
        </select>

        <button type="submit" class="submit">EDITAR PRODUCTO / GUARDAR</button>
        <button type="submit" class="rest">
          <span class="far fa-trash-alt"></span>Eliminar
        </button>
      </form>
    </section>

    <!--Include Footer-->
    <%- include('../partials/footer') %>
  </body>
</html>
